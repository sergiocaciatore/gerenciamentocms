    "item": [
        {
            "name": "/oauth2/token (Apigee enquanto identity server)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var data = pm.response.json()\r",
                            "pm.collectionVariables.set(\"jwt_token\", data.access_token);"
                        ],
                        "type": "text/javascript",
                        "packages": {},
                        "requests": {}
                    }
                }
            ],
            "request": {
                "auth": {
                    "type": "basic",
                    "basic": [
                        {
                            "key": "password",
                            "value": "{{client_secret}}",
                            "type": "string"
                        },
                        {
                            "key": "username",
                            "value": "{{client_id}}",
                            "type": "string"
                        }
                    ]
                },
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "urlencoded",
                    "urlencoded": [
                        {
                            "key": "grant_type",
                            "value": "client_credentials",
                            "type": "text"
                        }
                    ]
                },
                "url": {
                    "raw": "https://{{apigee_host_dev}}/oauth2/token",
                    "protocol": "https",
                    "host": [
                        "{{apigee_host_dev}}"
                    ],
                    "path": [
                        "oauth2",
                        "token"
                    ]
                }
            },
            "response": []
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
